<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>bw-wfmodules-org</artifactId>
    <groupId>org.bedework.deploy</groupId>
    <version>1.0.4</version>
  </parent>

  <artifactId>bw-wfmodules-apache-jdkim-library</artifactId>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>org.bedework</groupId>
      <artifactId>apache-jdkim-library</artifactId>
      <version>0.6</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.geronimo.specs</groupId>
      <artifactId>geronimo-activation_1.1_spec</artifactId>
      <version>1.0.2</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.geronimo.javamail</groupId>
      <artifactId>geronimo-javamail_1.4_mail</artifactId>
      <version>1.6</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.james</groupId>
      <artifactId>apache-mailet-base</artifactId>
      <version>1.1</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.james</groupId>
      <artifactId>apache-mailet</artifactId>
      <version>2.4</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.james</groupId>
      <artifactId>apache-mime4j-core</artifactId>
      <version>0.7</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.james</groupId>
      <artifactId>apache-mime4j-dom</artifactId>
      <version>0.7</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>dnsjava</groupId>
      <artifactId>dnsjava</artifactId>
      <version>2.1.1</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.bedework</groupId>
        <artifactId>bw-util-maven-deploy-wfmodule</artifactId>

        <configuration>
          <moduleName>org.bedework.org.apache.jdkim.library</moduleName>
          <noArtifact>true</noArtifact>

          <jarResources>
            <jarResource>
              <groupId>org.bedework</groupId>
              <artifactId>apache-jdkim-library</artifactId>
              <version>0.4</version>
            </jarResource>

            <jarResource>
              <groupId>org.apache.geronimo.specs</groupId>
              <artifactId>geronimo-activation_1.1_spec</artifactId>
              <version>1.0.2</version>
            </jarResource>

            <jarResource>
              <groupId>org.apache.geronimo.javamail</groupId>
              <artifactId>geronimo-javamail_1.4_mail</artifactId>
              <version>1.6</version>
            </jarResource>

            <jarResource>
              <groupId>org.apache.james</groupId>
              <artifactId>apache-mailet-base</artifactId>
              <version>1.1</version>
            </jarResource>

            <jarResource>
              <groupId>org.apache.james</groupId>
              <artifactId>apache-mailet</artifactId>
              <version>2.4</version>
            </jarResource>

            <jarResource>
              <groupId>org.apache.james</groupId>
              <artifactId>apache-mime4j-core</artifactId>
              <version>0.7</version>
            </jarResource>

            <jarResource>
              <groupId>org.apache.james</groupId>
              <artifactId>apache-mime4j-dom</artifactId>
              <version>0.7</version>
            </jarResource>

            <jarResource>
              <groupId>dnsjava</groupId>
              <artifactId>dnsjava</artifactId>
              <version>2.1.1</version>
            </jarResource>
          </jarResources>

          <moduleDependencies>
            <moduleDependency>
              <name>org.bedework.commons.codec</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.commons.logging</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.org.apache.httpcomponents.httpcore</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.org.apache.httpcomponents.httpclient</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.apache.log4j</name>
            </moduleDependency>

          </moduleDependencies>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>