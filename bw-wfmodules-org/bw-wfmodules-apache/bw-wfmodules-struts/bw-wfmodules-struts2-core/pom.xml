<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>bw-wfmodules-struts</artifactId>
    <groupId>org.bedework.deploy</groupId>
    <version>2.0.0</version>
  </parent>

  <artifactId>bw-wfmodules-org-apache-struts2-core</artifactId>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>org.apache.struts</groupId>
      <artifactId>struts2-core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.javassist</groupId>
      <artifactId>javassist</artifactId>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-fileupload2-jakarta-servlet6</artifactId>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-fileupload2-core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-text</artifactId>
    </dependency>

    <dependency>
      <groupId>ognl</groupId>
      <artifactId>ognl</artifactId>
      <version>3.3.5</version>
    </dependency>

    <dependency>
      <groupId>com.github.ben-manes.caffeine</groupId>
      <artifactId>caffeine</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.bedework</groupId>
        <artifactId>bw-util-maven-deploy-wfmodule</artifactId>

        <configuration>
          <moduleName>org.bedework.org.apache.struts2.core</moduleName>
          <noArtifact>true</noArtifact>

          <jarResources>
            <jarResource>
              <groupId>org.apache.struts</groupId>
              <artifactId>struts2-core</artifactId>
              <version>${apache.struts2.version}</version>
            </jarResource>

            <jarResource>
              <groupId>org.javassist</groupId>
              <artifactId>javassist</artifactId>
              <version>${javassist.version}</version>
            </jarResource>

            <jarResource>
              <groupId>org.apache.commons</groupId>
              <artifactId>commons-fileupload2-jakarta-servlet6</artifactId>
              <version>${commons-fileupload.version}</version>
            </jarResource>

            <dependency>
              <groupId>org.apache.commons</groupId>
              <artifactId>commons-fileupload2-core</artifactId>
              <version>${commons-fileupload.version}</version>
            </dependency>

            <jarResource>
              <groupId>org.apache.commons</groupId>
              <artifactId>commons-text</artifactId>
              <version>${commons.text.version}</version>
            </jarResource>

            <jarResource>
              <groupId>ognl</groupId>
              <artifactId>ognl</artifactId>
              <version>3.3.5</version>
            </jarResource>

            <jarResource>
              <groupId>com.github.ben-manes.caffeine</groupId>
              <artifactId>caffeine</artifactId>
              <version>${caffeine.version}</version>
            </jarResource>
          </jarResources>

          <moduleDependencies>
            <moduleDependency>
              <name>org.bedework.org.freemarker</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.commons.io</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.commons.lang3</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.apache.logging.log4j.api</name>
            </moduleDependency>

            <moduleDependency>
              <name>wildflyee.api</name>
            </moduleDependency>

            <moduleDependency>
              <name>sun.jdk</name>
            </moduleDependency>
          </moduleDependencies>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>