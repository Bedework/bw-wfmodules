<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>bw-wfmodules-org</artifactId>
    <groupId>org.bedework.deploy</groupId>
    <version>1.0.4-SNAPSHOT</version>
  </parent>

  <artifactId>bw-wfmodules-org-hibernate-core</artifactId>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>org.bedework</groupId>
      <artifactId>hibernate-core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.bedework</groupId>
      <artifactId>bw-util-hibernate</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.bedework</groupId>
        <artifactId>bw-util-maven-deploy-wfmodule</artifactId>

        <configuration>
          <moduleName>org.bedework.org.hibernate.core</moduleName>
          <noArtifact>true</noArtifact>

          <jarResources>
            <!-- Install the hibernate core with a small
                 classloading patch
              -->
            <fileInfo>
              <groupId>org.bedework</groupId>
              <artifactId>hibernate-core</artifactId>
              <version>${hibernate.patched.version}</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.hibernate</groupId>
              <artifactId>hibernate-ehcache</artifactId>
              <version>${hibernate.version}</version>
            </fileInfo>

            <!--
            <fileInfo>
              <groupId>org.hibernate</groupId>
              <artifactId>hibernate-validator</artifactId>
              <version>5.3.6.Final</version>
            </fileInfo>
            -->

            <fileInfo>
              <groupId>org.hibernate.javax.persistence</groupId>
              <artifactId>hibernate-jpa-2.1-api</artifactId>
              <version>1.0.0.Final</version>
            </fileInfo>

            <fileInfo>
              <groupId>net.sf.ehcache</groupId>
              <artifactId>ehcache</artifactId>
              <version>2.10.3</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.javassist</groupId>
              <artifactId>javassist</artifactId>
              <version>3.20.0-GA</version>
            </fileInfo>

            <fileInfo>
              <groupId>antlr</groupId>
              <artifactId>antlr</artifactId>
              <version>2.7.7</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.apache.geronimo.specs</groupId>
              <artifactId>geronimo-jta_1.1_spec</artifactId>
              <version>1.1.1</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.jboss</groupId>
              <artifactId>jandex</artifactId>
              <version>2.0.3.Final</version>
            </fileInfo>

            <fileInfo>
              <groupId>com.fasterxml</groupId>
              <artifactId>classmate</artifactId>
              <version>1.3.0</version>
            </fileInfo>

            <fileInfo>
              <groupId>dom4j</groupId>
              <artifactId>dom4j</artifactId>
              <version>1.6.1</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.hibernate.common</groupId>
              <artifactId>hibernate-commons-annotations</artifactId>
              <version>5.0.1.Final</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.jboss.spec.javax.interceptor</groupId>
              <artifactId>jboss-interceptors-api_1.1_spec</artifactId>
              <version>1.0.0.Beta1</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.bedework</groupId>
              <artifactId>bw-util-hibernate</artifactId>
              <version>${bw-util-hibernate.version}</version>
            </fileInfo>
          </jarResources>

          <moduleDependencies>
            <moduleDependency>
              <name>org.jboss.logging</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.org.slf4j.slf4j.api</name>
            </moduleDependency>

            <moduleDependency>
              <name>javax.annotation.api</name>
            </moduleDependency>

            <moduleDependency>
              <name>javax.el.api</name>
            </moduleDependency>

            <moduleDependency>
              <name>wildflyee.api</name>
            </moduleDependency>
          </moduleDependencies>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>