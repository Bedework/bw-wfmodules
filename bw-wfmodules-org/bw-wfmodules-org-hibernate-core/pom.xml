<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>bw-wfmodules-org</artifactId>
    <groupId>org.bedework.deploy</groupId>
    <version>2.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>bw-wfmodules-org-hibernate-core</artifactId>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>org.hibernate.orm</groupId>
      <artifactId>hibernate-core</artifactId>
<!--      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>-->
    </dependency>

    <dependency>
      <groupId>org.hibernate.orm</groupId>
      <artifactId>hibernate-jcache</artifactId>
    </dependency>

    <dependency>
      <groupId>jakarta.transaction</groupId>
      <artifactId>jakarta.transaction-api</artifactId>
    </dependency>

<!--    <dependency>
      <groupId>org.bedework.database</groupId>
      <artifactId>bw-hibernate</artifactId>
    </dependency> -->

    <dependency>
      <groupId>javax.cache</groupId>
      <artifactId>cache-api</artifactId>
      <version>${javax.cache-api.version}</version>
    </dependency>

    <dependency>
      <groupId>org.antlr</groupId>
      <artifactId>antlr4</artifactId>
    </dependency>

    <dependency>
      <groupId>net.bytebuddy</groupId>
      <artifactId>byte-buddy</artifactId>
      <version>1.14.18</version>
    </dependency>

    <dependency>
      <groupId>io.smallrye</groupId>
      <artifactId>jandex</artifactId>
    </dependency>

    <dependency>
      <groupId>com.fasterxml</groupId>
      <artifactId>classmate</artifactId>
      <version>1.3.0</version>
    </dependency>

    <dependency>
      <groupId>org.hibernate.common</groupId>
      <artifactId>hibernate-commons-annotations</artifactId>
      <version>7.0.3.Final</version>
    </dependency>

    <dependency>
      <groupId>org.glassfish.jaxb</groupId>
      <artifactId>jaxb-runtime</artifactId>
      <version>4.0.2</version>
<!--      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions> -->
    </dependency>

    <dependency>
      <groupId>com.sun.istack</groupId>
      <artifactId>istack-commons-runtime</artifactId>
      <version>3.0.7</version>
    </dependency>

    <dependency>
      <groupId>org.jvnet.staxex</groupId>
      <artifactId>stax-ex</artifactId>
      <version>1.8</version>
    </dependency>

    <dependency>
      <groupId>com.sun.xml.fastinfoset</groupId>
      <artifactId>FastInfoset</artifactId>
      <version>1.2.15</version>
    </dependency>

    <dependency>
      <groupId>org.ehcache</groupId>
      <artifactId>ehcache</artifactId>
      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.bedework</groupId>
        <artifactId>bw-util-maven-deploy-wfmodule</artifactId>

        <configuration>
          <moduleName>org.bedework.org.hibernate.core</moduleName>
          <noArtifact>true</noArtifact>

          <jarResources>
            <!-- Install the hibernate core with a small
                 classloading patch
              -->
            <fileInfo>
              <groupId>org.hibernate.orm</groupId>
              <artifactId>hibernate-core</artifactId>
              <version>${hibernate.version}</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.hibernate.orm</groupId>
              <artifactId>hibernate-jcache</artifactId>
              <version>${hibernate.version}</version>
            </fileInfo>

            <!--
            <fileInfo>
              <groupId>org.hibernate.orm</groupId>
              <artifactId>hibernate-validator</artifactId>
              <version>5.3.6.Final</version>
            </fileInfo>
            -->

            <fileInfo>
              <groupId>javax.cache</groupId>
              <artifactId>cache-api</artifactId>
              <version>${javax.cache-api.version}</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.ehcache</groupId>
              <artifactId>ehcache</artifactId>
              <version>${ehcache.version}</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.antlr</groupId>
              <artifactId>antlr4</artifactId>
              <version>${antlr.version}</version>
            </fileInfo>

            <fileInfo>
              <groupId>net.bytebuddy</groupId>
              <artifactId>byte-buddy</artifactId>
              <version>1.14.18</version>
            </fileInfo>

            <fileInfo>
              <groupId>io.smallrye</groupId>
              <artifactId>jandex</artifactId>
              <version>${jandex.version}</version>
            </fileInfo>

            <fileInfo>
              <groupId>com.fasterxml</groupId>
              <artifactId>classmate</artifactId>
              <version>1.3.0</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.hibernate.common</groupId>
              <artifactId>hibernate-commons-annotations</artifactId>
              <version>7.0.3.Final</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.glassfish.jaxb</groupId>
              <artifactId>txw2</artifactId>
              <version>2.3.1</version>
            </fileInfo>

            <fileInfo>
              <groupId>com.sun.istack</groupId>
              <artifactId>istack-commons-runtime</artifactId>
              <version>3.0.7</version>
            </fileInfo>

            <fileInfo>
              <groupId>org.jvnet.staxex</groupId>
              <artifactId>stax-ex</artifactId>
              <version>1.8</version>
            </fileInfo>

            <fileInfo>
              <groupId>com.sun.xml.fastinfoset</groupId>
              <artifactId>FastInfoset</artifactId>
              <version>1.2.15</version>
            </fileInfo>
<!--
            <fileInfo>
              <groupId>org.bedework.database</groupId>
              <artifactId>bw-hibernate</artifactId>
              <version>${bw-database.version}</version>
            </fileInfo>
-->
            <fileInfo>
              <groupId>org.bedework</groupId>
              <artifactId>bw-util-logging</artifactId>
              <version>${bw-util-logging.version}</version>
            </fileInfo>
          </jarResources>

          <moduleDependencies>
            <moduleDependency>
              <name>org.jboss.logging</name>
            </moduleDependency>
            <moduleDependency>
              <name>org.slf4j</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.util.jmx</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.apache.logging.log4j.api</name>
            </moduleDependency>

            <moduleDependency>
              <name>jakarta.activation.api</name>
            </moduleDependency>

            <moduleDependency>
              <name>jakarta.annotation.api</name>
            </moduleDependency>

            <moduleDependency>
              <name>jakarta.el.api</name>
            </moduleDependency>

            <moduleDependency>
              <name>jakarta.persistence.api</name>
            </moduleDependency>

            <moduleDependency>
              <name>jakarta.transaction.api</name>
            </moduleDependency>

            <moduleDependency>
              <name>jdk.unsupported</name>
              <export>false</export>
            </moduleDependency>

            <moduleDependency>
              <name>wildflyee.api</name>
            </moduleDependency>
          </moduleDependencies>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>