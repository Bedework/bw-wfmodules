<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.bedework.deploy</groupId>
    <artifactId>bw-wfmodules-cli</artifactId>
    <version>2.1.0-SNAPSHOT</version>
  </parent>

  <artifactId>bw-wfmodules-cli-app</artifactId>
  <packaging>pom</packaging>
  <name>Bedework wfmodules: cli app</name>

  <dependencies>
    <dependency>
      <groupId>org.bedework</groupId>
      <artifactId>bw-cli-bwcmd</artifactId>
    </dependency>

    <dependency>
      <groupId>org.bedework</groupId>
      <artifactId>bw-cli-jmx</artifactId>
    </dependency>

    <dependency>
      <groupId>org.bedework</groupId>
      <artifactId>bw-cli-shell</artifactId>
    </dependency>

    <dependency>
      <groupId>org.bedework</groupId>
      <artifactId>bw-cli-toolcmd</artifactId>
    </dependency>

    <dependency>
      <groupId>org.fusesource.jansi</groupId>
      <artifactId>jansi</artifactId>
    </dependency>

    <dependency>
      <groupId>org.jline</groupId>
      <artifactId>jline</artifactId>
    </dependency>

    <dependency>
      <groupId>info.picocli</groupId>
      <artifactId>picocli</artifactId>
    </dependency>

    <dependency>
      <groupId>info.picocli</groupId>
      <artifactId>picocli-shell-jline3</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.bedework</groupId>
        <artifactId>bw-util-maven-deploy-wfmodule</artifactId>

        <configuration>
          <moduleName>org.bedework.cli.cli-app</moduleName>

          <noArtifact>true</noArtifact>
          <mainClass>org.bedework.bwcli.BwShell</mainClass>

          <jarResources>
            <jarResource>
              <groupId>org.bedework</groupId>
              <artifactId>bw-cli-jmx</artifactId>
              <version>${bw-cli.version}</version>
            </jarResource>

            <jarResource>
              <groupId>org.bedework</groupId>
              <artifactId>bw-cli-shell</artifactId>
              <version>${bw-cli.version}</version>
            </jarResource>

            <jarResource>
              <groupId>org.bedework</groupId>
              <artifactId>bw-cli-toolcmd</artifactId>
              <version>${bw-cli.version}</version>
            </jarResource>

            <jarResource>
              <groupId>org.bedework</groupId>
              <artifactId>bw-cli-bwcmd</artifactId>
              <version>${bw-cli.version}</version>
            </jarResource>

            <jarResource>
              <groupId>org.fusesource.jansi</groupId>
              <artifactId>jansi</artifactId>
              <version>${jansi.version}</version>
            </jarResource>

            <jarResource>
              <groupId>org.jline</groupId>
              <artifactId>jline</artifactId>
              <version>${jline.version}</version>
            </jarResource>

            <jarResource>
              <groupId>info.picocli</groupId>
              <artifactId>picocli</artifactId>
              <version>${picocli.version}</version>
            </jarResource>

            <jarResource>
              <groupId>info.picocli</groupId>
              <artifactId>picocli-shell-jline3</artifactId>
              <version>${picocli.version}</version>
            </jarResource>
          </jarResources>

          <moduleDependencies>
            <moduleDependency>
              <name>org.bedework.base</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.logging</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.util.args</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.util.http</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.util.jmx</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.util.misc</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.util.xml</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.access</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.logs</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.org.apache.httpcomponents.httpclient</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.org.apache.httpcomponents.httpcore</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.com.fasterxml.jackson.core.annotations</name>
            </moduleDependency>

            <moduleDependency>
              <name>org.bedework.com.fasterxml.jackson.core.databind</name>
            </moduleDependency>

            <moduleDependency>
              <name>jakarta.servlet.jsp.api</name>
            </moduleDependency>
          </moduleDependencies>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>